{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-var": "warn",
        "no-unused-vars": "error",
        "no-empty": "warn",
        "callback-return": "error",
        "handle-callback-err": "error",
        "no-mixed-requires": "error",
        "no-new-require": "error",
        "no-path-concat": "error",
        "valid-jsdoc": ["warn", {
            "requireReturn": false,
            "requireReturnDescription": false,
            "preferType": {
            "String": "string",
            "Number": "number",
            "Boolean": "boolean",
            "Symbol": "symbol",
            "function": "Function",
            "object": "Object",
            "date": "Date",
            "error": "Error"
            }
        }],
        "semi-spacing": "error",
        "comma-spacing": "error",
		"comma-style": "error",
        "arrow-body-style": "error",
        "arrow-spacing": "error",
        "space-before-function-paren": ["error", {
			"anonymous": "never",
			"named": "never",
			"asyncArrow": "always"
		}],
		"space-in-parens": "error",
		"space-infix-ops": "error",
		"space-unary-ops": "error",
        "spaced-comment": "error",
        "no-duplicate-imports": "warn"
    }
}
